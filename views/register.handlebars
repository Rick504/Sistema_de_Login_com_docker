<link rel="stylesheet" href="register.css">

<a href="/" class="back"> Voltar </a>

<form action='/user' method='post'>

    <h1> Cadastro </h1>

    <div class="register_div">
        <div class="inputs">
            <input type='text' id="u_name" name='u_name' placeholder='Seu nome:' minlength="3" required><br>
            <input type='email' id="email" name='email' placeholder='E-mail:' required><br>
            <input type="password" name="password" placeholder="Sua senha:" minlength="8" maxlength="20" required>
        </div>
    </div>

    <div class="register_button">
        <input type='submit' name='btnSubmit' value='Cadastrar'>
    </div>

</form>